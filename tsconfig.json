{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "convertTabsToSpaces": true,
  },
  "include": [
    "src"
  ]
}
